<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <ImageView
            android:id="@+id/teacher_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_teacher"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
></ImageView>
        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="אבי כהן"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/teacher_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 שנות ניסיון"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/teacher_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='150 ש\"ח לשיעור'
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הרשמה לשיעור"
            android:layout_marginTop="12dp"
            android:gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
    <!-- קובץ layout XML למסך הצגת פרטי מורה -->
