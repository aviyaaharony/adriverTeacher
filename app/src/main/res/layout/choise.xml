<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe98f"
    android:backgroundTint="#ffe98f">

    <Button
        android:id="@+id/state"
        android:layout_width="207dp"
        android:layout_height="76dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#ffbd59"
        android:text="מצב הרישיון שלי"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setLesson"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/setLesson"
        android:layout_width="207dp"
        android:layout_height="76dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="244dp"
        android:backgroundTint="#ffbd59"
        android:text="קביעת שיעור"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>