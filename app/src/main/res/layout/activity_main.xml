<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB99"
    android:padding="16dp">


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="132dp"
        android:fontFamily="sans-serif-medium"
        android:text="צור/צרי חשבון חדש"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="370dp"
        android:layout_height="391dp"
        android:layout_below="@id/title_text"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_background"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_text"
        app:layout_constraintVertical_bias="0.142">

        <View
            android:layout_width="80dp"
            android:layout_height="81dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:background="#DDDDDD" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="366dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edit_text_background"
                android:hint="תעודת זהות"
                android:padding="10dp" />

            <EditText
                android:id="@+id/place"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edit_text_background"
                android:hint="שם משתמש"
                android:padding="10dp" />

            <EditText
                android:id="@+id/full_name"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edit_text_background"
                android:hint="סיסמא"
                android:inputType="textPassword"
                android:padding="10dp" />

            <EditText
                android:id="@+id/birthdate"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edit_text_background"
                android:hint="תאריך לידה"
                android:padding="10dp"
                android:textColorLink="#000000" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="@drawable/edit_text_background"
                android:hint="כתובת מייל"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:text="מורה" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/alreadyHave"
        android:layout_width="157dp"
        android:layout_height="20dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="40dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="כבר קיים חשבון? לחץ כאן"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/makeAcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#A09F9F"
        android:text="צור חשבון"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_container" />

</androidx.constraintlayout.widget.ConstraintLayout>